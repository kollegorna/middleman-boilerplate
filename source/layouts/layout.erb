<%

  meta_name        = "Kollegorna"
  meta_title       = "Title"
  meta_description = current_page.data.description || "Kollegorna Middleman boilerplate."
  meta_og_img      = "https://www.yoursite.com/public/#{ current_page.data.share_image || "og-image.jpg"}"

%><!DOCTYPE html>
<html lang="en">
<head>
  <!-- Initial config -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

  <!-- SEO -->
  <title><%= current_page.data.title ? "#{current_page.data.title} | #{meta_name}" : "#{meta_name} | #{meta_title}" %></title>
  <meta name="author" content="Kollegorna" />
  <meta name="description" content="<%= meta_description %>" />

  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="<%= image_path('favicons/apple-touch-icon.png') %>" />
  <link rel="icon" type="image/png" href="<%= image_path('favicons/favicon-32x32.png') %>" sizes="32x32" />
  <link rel="icon" type="image/png" href="<%= image_path('favicons/favicon-16x16.png') %>" sizes="16x16" />
  <link rel="manifest" href="<%= image_path('favicons/manifest.json') %>" />
  <link rel="mask-icon" href="<%= image_path('favicons/safari-pinned-tab.svg') %>" color="#21252b" />
  <meta name="theme-color" content="#00C66B" />
  <meta name="application-name" content="Kollegorna" />

  <!-- Facebook -->
  <meta property="fb:app_id" content="">
  <meta property="og:type" content="website" />
  <meta property="og:meta_name" content="<%= meta_name %>" />
  <meta property="og:title" content="<%= meta_title %>" />
  <meta property="og:description" content="<%= meta_description %>" />
  <meta property="og:image" content="<%= meta_og_img %>" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= meta_title %>" />
  <meta name="twitter:description" content="<%= meta_description %>" />
  <meta name="twitter:image:src" content="<%= meta_og_img %>" />
  <meta name="twitter:site" content="@kollegorna" />
  <meta name="twitter:creator" content="@kollegorna" />

  <!-- Google+, Schema.org, Other -->
  <meta itemprop="name" content="<%= meta_title %>" />
  <meta itemprop="description" content="<%= meta_description %>" />
  <meta itemprop="image" content="<%= meta_og_img %>" />
  <link rel="image_src" href="<%= meta_og_img %>" />

  <%= stylesheet_link_tag "main.bundle" %>
</head>
<body>
  <%= partial "partials/header" %>

  <%= yield %>

  <%= partial "partials/footer" %>

  <%= javascript_include_tag "main.bundle" %>
</body>
</html>
